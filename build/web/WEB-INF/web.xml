<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ControllerCartBean</servlet-name>
        <servlet-class>controller.ControllerCartBean</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerCustomer</servlet-name>
        <servlet-class>controller.ControllerCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerProduct</servlet-name>
        <servlet-class>controller.ControllerProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerAddPro</servlet-name>
        <servlet-class>controller.ControllerAddPro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerEditPro</servlet-name>
        <servlet-class>controller.ControllerEditPro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerMail</servlet-name>
        <servlet-class>controller.ControllerMail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerCartBean</servlet-name>
        <url-pattern>/ControllerCartBean</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerCustomer</servlet-name>
        <url-pattern>/ControllerCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerProduct</servlet-name>
        <url-pattern>/ControllerProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerAddPro</servlet-name>
        <url-pattern>/ControllerAddPro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerEditPro</servlet-name>
        <url-pattern>/ControllerEditPro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerMail</servlet-name>
        <url-pattern>/ControllerMail</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
